{
	"ts-node": { "files": true },
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"typeRoots": ["./src/types.d.ts"],
	},
	"include": [
		"src/**/*",
		"src/**/*.d.ts",
		"types/**/*.d.ts"
	],
	"exclude": ["node_modules", "dist"],
}
